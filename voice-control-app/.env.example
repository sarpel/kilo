# ═══════════════════════════════════════════════════════════════════════════
# API CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════
# WEBSOCKET_URL: WebSocket endpoint for real-time voice streaming
#   - Android Emulator: ws://10.0.2.2:8000/ws (10.0.2.2 = host machine)
#   - iOS Simulator: ws://localhost:8000/ws
#   - Physical Device: ws://<your-computer-ip>:8000/ws
#   - Production: wss://your-server.com/ws (use WSS for secure connection)
#
#   To find your computer's IP:
#     Windows: ipconfig | findstr IPv4
#     macOS/Linux: ifconfig | grep "inet "
WEBSOCKET_URL=ws://10.0.2.2:8000/ws

# API_BASE_URL: HTTP endpoint for REST API calls
#   - Used for health checks, configuration sync, and non-streaming requests
#   - Should match the server's HOST:PORT configuration
#   - Use HTTPS in production
#
#   Environment-specific examples:
#     Android Emulator: http://10.0.2.2:8000
#     iOS Simulator: http://localhost:8000
#     Physical Device: http://192.168.1.100:8000
#     Production: https://api.your-server.com
API_BASE_URL=http://10.0.2.2:8000

# ═══════════════════════════════════════════════════════════════════════════
# DEVELOPMENT SETTINGS
# ═══════════════════════════════════════════════════════════════════════════
# DEBUG: Enable development debugging features
#   - true: Enable verbose logging, React Native debugger, network inspection
#   - false: Production mode with minimal logging
#
#   Debug mode enables:
#     • Console logging of WebSocket messages
#     • Audio buffer visualization
#     • Network request/response logging
#     • Performance metrics display
#     • Error boundary details
DEBUG=true

# ═══════════════════════════════════════════════════════════════════════════
# AUDIO CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════
# These settings MUST match the server's audio configuration for proper
# communication. Mismatched settings will cause transcription failures.

# AUDIO_SAMPLE_RATE: Recording sample rate in Hz
#   - 16000: Optimal for speech recognition (Whisper's native rate)
#   - 44100: Higher quality but larger files and unnecessary for speech
#   - Must match server's AUDIO_SAMPLE_RATE setting
AUDIO_SAMPLE_RATE=16000

# AUDIO_CHANNELS: Number of recording channels
#   - 1: Mono (recommended - smaller files, better for speech)
#   - 2: Stereo (unnecessary for voice commands)
#   - Must match server's AUDIO_CHANNELS setting
AUDIO_CHANNELS=1

# AUDIO_BIT_DEPTH: Bits per audio sample
#   - 16: Standard quality for speech (recommended)
#   - 8: Lower quality, smaller files
#   - Must match server's AUDIO_BIT_DEPTH setting
AUDIO_BIT_DEPTH=16

# ═══════════════════════════════════════════════════════════════════════════
# APP CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════
# APP_NAME: Application display name
#   - Shown in app header, notifications, and system settings
#   - Keep it short and recognizable
APP_NAME=VoiceControl

# APP_VERSION: Current application version (semantic versioning)
#   - Format: MAJOR.MINOR.PATCH
#   - MAJOR: Breaking changes
#   - MINOR: New features, backward compatible
#   - PATCH: Bug fixes
#   - Displayed in About screen and sent with API requests
APP_VERSION=1.0.0

# ═══════════════════════════════════════════════════════════════════════════
# LOGGING
# ═══════════════════════════════════════════════════════════════════════════
# LOG_LEVEL: Minimum log level to display
#   ┌──────────┬─────────────────────────────────────────────────────────────┐
#   │ Level    │ Description                                                 │
#   ├──────────┼─────────────────────────────────────────────────────────────┤
#   │ trace    │ Very detailed debugging (function entry/exit, values)       │
#   │ debug    │ Detailed debugging information                              │
#   │ info     │ General operational messages (recommended for dev)          │
#   │ warn     │ Potential issues that don't stop the app                    │
#   │ error    │ Errors that need attention                                  │
#   │ silent   │ No logging (production, maximum performance)                │
#   └──────────┴─────────────────────────────────────────────────────────────┘
LOG_LEVEL=info

# ═══════════════════════════════════════════════════════════════════════════
# CONNECTION SETTINGS (OPTIONAL)
# ═══════════════════════════════════════════════════════════════════════════
# CONNECTION_TIMEOUT: Seconds to wait for initial server connection
#   - Increase on slow networks or distant servers
CONNECTION_TIMEOUT=10

# RECONNECT_ATTEMPTS: Number of automatic reconnection attempts
#   - 0: No automatic reconnection
#   - -1: Infinite reconnection attempts
RECONNECT_ATTEMPTS=5

# RECONNECT_INTERVAL: Seconds between reconnection attempts
#   - Uses exponential backoff (doubles each attempt up to max)
RECONNECT_INTERVAL=2

# ═══════════════════════════════════════════════════════════════════════════
# UI SETTINGS (OPTIONAL)
# ═══════════════════════════════════════════════════════════════════════════
# SHOW_WAVEFORM: Display audio waveform during recording
SHOW_WAVEFORM=true

# VIBRATE_ON_RECORD: Haptic feedback when recording starts/stops
VIBRATE_ON_RECORD=true

# THEME: Color theme (light, dark, system)
THEME=system

# ═══════════════════════════════════════════════════════════════════════════
# NETWORK DISCOVERY (OPTIONAL)
# ═══════════════════════════════════════════════════════════════════════════
# ENABLE_MDNS: Enable mDNS/Bonjour for automatic server discovery
#   - Automatically finds servers on local network
#   - Useful for development when IP addresses change
ENABLE_MDNS=true

# MDNS_SERVICE_TYPE: mDNS service type to look for
MDNS_SERVICE_TYPE=_voicecontrol._tcp