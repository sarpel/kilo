{
  "name": "voice-control-app",
  "version": "1.0.0",
  "description": "React Native Android application for voice control ecosystem",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "build:android": "cd android && ./gradlew assembleRelease",
    "clean": "react-native clean",
    "clean:android": "cd android && ./gradlew clean",
    "doctor": "react-native doctor"
  },
  "keywords": [
    "react-native",
    "voice-control",
    "speech-to-text",
    "android",
    "websocket"
  ],
  "author": "Voice Control Ecosystem Team",
  "license": "MIT",
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.73.0",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "react-native-screens": "^3.29.0",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-gesture-handler": "^2.14.1",
    "react-native-reanimated": "^3.6.1",
    "react-native-linear-gradient": "^2.8.3",
    "socket.io-client": "^4.7.4",
    "react-native-audio-record": "^0.2.2",
    "react-native-sound": "^0.11.2",
    "react-native-vector-icons": "^10.0.3",
    "react-native-permissions": "^4.0.1",
    "react-native-config": "^1.5.1",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "react-native-device-info": "^10.11.0",
    "react-native-fs": "^2.20.0",
    "@react-native-community/netinfo": "^11.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.73.0",
    "@react-native/metro-config": "^0.73.1",
    "@tsconfig/react-native": "^3.0.0",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.0.0",
    "eslint": "^8.19.0",
    "jest": "^29.0.0",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4",
    "metro-react-native-babel-preset": "^0.77.0",
    "react-native-dotenv": "^3.4.9",
    "@types/node": "^20.10.4"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation|react-native-.*)/)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "rnpm": {
    "assets": [
      "./src/assets/fonts"
    ]
  }
}