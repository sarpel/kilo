# Voice Control Ecosystem - Environment Configuration Template
# Copy this file to .env and update the values for your environment

# ===============================================
# SERVER CONFIGURATION
# ===============================================
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ===============================================
# SECURITY
# ===============================================
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===============================================
# CORS SETTINGS
# ===============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:3000", "http://10.0.2.2:3000"]

# ===============================================
# WEBSOCKET CONFIGURATION
# ===============================================
WEBSOCKET_MAX_CONNECTIONS=10
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10

# ===============================================
# LOGGING
# ===============================================
LOG_LEVEL=INFO
LOG_FILE=

# ===============================================
# SPEECH-TO-TEXT (STT) CONFIGURATION
# ===============================================
# Available models: tiny, base, small, medium, large, large-v2, large-v3
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
STT_CONFIDENCE_THRESHOLD=0.7
STT_MAX_DURATION=300

# ===============================================
# LANGUAGE MODEL (LLM) CONFIGURATION
# ===============================================
# Ollama server URL
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=30
LLM_MAX_TOKENS=150
LLM_TEMPERATURE=0.7

# ===============================================
# MCP (MODEL CONTEXT PROTOCOL) CONFIGURATION
# ===============================================
MCP_TIMEOUT=10
MCP_MAX_RESULTS=100

# ===============================================
# AUDIO PROCESSING
# ===============================================
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_BIT_DEPTH=16
AUDIO_CHUNK_SIZE=4096
AUDIO_MAX_BUFFER_SIZE=10485760

# ===============================================
# DATABASE (OPTIONAL)
# ===============================================
# DATABASE_URL=postgresql://username:password@localhost/voice_control_db
# DATABASE_URL=sqlite:///./storage/voice_control.db

# ===============================================
# CACHE (OPTIONAL)
# ===============================================
# REDIS_URL=redis://localhost:6379/0

# ===============================================
# FILE STORAGE
# ===============================================
STORAGE_PATH=./storage
MAX_FILE_SIZE=104857600

# ===============================================
# PERFORMANCE
# ===============================================
MAX_WORKERS=4
ASYNC_SEMAPHORE_LIMIT=100
REQUEST_TIMEOUT=60
RATE_LIMIT_REQUESTS=60

# ===============================================
# MONITORING
# ===============================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# ===============================================
# DEVELOPMENT OPTIONS
# ===============================================
HOT_RELOAD=true
AUTO_RELOAD_MODELS=false
MOCK_SERVICES=false

# ===============================================
# FEATURE FLAGS
# ===============================================
ENABLE_STT=true
ENABLE_LLM=true
ENABLE_MCP=true
ENABLE_AUDIO_PROCESSING=true
ENABLE_TRANSCRIPTION=true
ENABLE_STREAMING=true