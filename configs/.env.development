# Voice Control Server - Development Environment Configuration
# ===============================================

# Server Configuration
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=DEBUG
WORKERS=1

# Security Configuration
SECRET_KEY=development-secret-key-change-for-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=["http://localhost:3000", "http://localhost:19006", "http://10.0.2.2:3000"]

# CORS Configuration (More permissive for development)
CORS_ALLOW_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Database Configuration
DATABASE_URL=sqlite:///./storage/voice_control_dev.db
# Alternative PostgreSQL for development:
# DATABASE_URL=postgresql://voicecontrol:dev_password@localhost:5432/voice_control_dev

# Redis Configuration (Optional for development)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=10
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_CLOSE_TIMEOUT=60
WEBSOCKET_MAX_MESSAGE_SIZE=5242880

# STT Configuration
WHISPER_MODEL=base
WHISPER_DEVICE=cpu  # CPU for development to save GPU resources
WHISPER_COMPUTE_TYPE=int8
STT_CONFIDENCE_THRESHOLD=0.6
STT_LANGUAGE=en
STT_TIMEOUT=15

# LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:7b  # Smaller model for faster development
LLM_MAX_TOKENS=256
LLM_TEMPERATURE=0.8
LLM_TIMEOUT=30
LLM_SYSTEM_PROMPT="You are a helpful voice assistant in development mode. You can respond in development context."

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_BIT_DEPTH=16
AUDIO_CHUNK_SIZE=1024
AUDIO_BUFFER_SIZE=2048
AUDIO_MAX_DURATION=10  # Shorter for development testing

# MCP Configuration
MCP_TIMEOUT=15
MCP_MAX_CONCURRENT_REQUESTS=2
MCP_SERVER_TIMEOUT=5

# Logging Configuration
LOG_FILE_PATH=storage/logs/development.log
LOG_MAX_SIZE=50MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=text  # More readable for development
AUDIT_LOG_FILE=storage/logs/audit_dev.log

# Performance Configuration
MAX_MEMORY_USAGE=2048  # MB
MAX_CPU_USAGE=50  # Percentage
AUTO_SCALING_ENABLED=false  # Disabled for development

# Monitoring Configuration
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=8001
GRAFANA_ENABLED=false
GRAFANA_PORT=3000
METRICS_RETENTION_DAYS=7

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=168  # Weekly backup in development
BACKUP_RETENTION_DAYS=7
BACKUP_STORAGE_PATH=./backups
S3_BACKUP_ENABLED=false

# Notification Configuration (Disabled for development)
EMAIL_ENABLED=false

# Feature Flags (All enabled for development testing)
FEATURE_VOICE_COMMANDS=true
FEATURE_SYSTEM_CONTROL=true
FEATURE_BROWSER_AUTOMATION=true
FEATURE_FILE_OPERATIONS=true
FEATURE_TEXT_TO_SPEECH=true
FEATURE_MULTILANGUAGE=true

# Security Features (Relaxed for development)
ENABLE_RATE_LIMITING=false
ENABLE_API_KEY_AUTH=false
ENABLE_JWT_AUTH=false
ENABLE_CORS=true
ENABLE_HTTPS_REDIRECT=false

# Development-specific features
HOT_RELOAD=true
AUTO_RELOAD=true
DEV_TOOLS_ENABLED=true
DEBUG_PYTHON=true
VERBOSE_LOGGING=true

# Container Configuration (Development - lighter resources)
CONTAINER_MEMORY_LIMIT=2G
CONTAINER_CPU_LIMIT=2
CONTAINER_RESTART_POLICY=always

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=2
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_START_PERIOD=30

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300  # 5 minutes for development
CACHE_MAX_SIZE=100

# Session Configuration
SESSION_TIMEOUT=3600  # 1 hour for development
SESSION_CLEANUP_INTERVAL=60  # 1 minute
